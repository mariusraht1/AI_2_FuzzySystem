<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.MainScene">
   <children>
      <Label text="Max. Lagermenge:" GridPane.columnSpan="3" GridPane.rowIndex="3" />
      <TextField fx:id="tf_maxNumOfStock" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="48.0" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      <Label text="Initiale Lagermenge:" GridPane.columnSpan="3" GridPane.rowIndex="5" />
      <TextField fx:id="tf_numOfStock" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="48.0" GridPane.columnIndex="3" GridPane.rowIndex="5" />
      <ListView fx:id="lv_products" prefHeight="150.0" prefWidth="150.0" GridPane.columnSpan="5" GridPane.rowIndex="4" />
      <LineChart fx:id="lc_stockAmount" animated="false" GridPane.columnIndex="5" GridPane.rowSpan="7">
        <xAxis>
          <NumberAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </LineChart>
      <ListView fx:id="lv_console" prefWidth="400.0" GridPane.columnIndex="6" GridPane.rowSpan="7" />
      <Button minWidth="50.0" mnemonicParsing="false" onAction="#onAction_btnSetNumOfStock" text="OK" GridPane.columnIndex="4" GridPane.rowIndex="5" />
      <Button minWidth="50.0" mnemonicParsing="false" onAction="#onAction_btnSetMaxNumOfStock" text="OK" GridPane.columnIndex="4" GridPane.rowIndex="3" />
      <Label text="Weitere Einstellungen:" GridPane.columnSpan="5" GridPane.rowIndex="2">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Button cancelButton="true" minWidth="50.0" mnemonicParsing="false" onAction="#onAction_btnReset" text="Reset" GridPane.columnIndex="3" />
      <Button minWidth="50.0" mnemonicParsing="false" onAction="#onAction_btnPlay" text="Play" GridPane.columnIndex="2" />
      <TextField fx:id="tf_numOfSteps" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" GridPane.columnIndex="1" />
      <Label text="Steps: " />
      <Button cancelButton="true" minWidth="50.0" mnemonicParsing="false" onAction="#onAction_btnExport" text="Export" GridPane.columnIndex="3" GridPane.rowIndex="1" />
   </children>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</GridPane>
